// layout
$link-color = #95b1d8
$link-hover-color = #c6d6ed
$loader-color = #666666

.wrapper
  .content
    a,
    a:visited
      color $link-color
      &:hover
        color $link-hover-color

    display flex
    flex-direction column

    .transparent.box
      border 0
      border-radius 0
      box-shadow 0 0 !important

    // form
    form.form
      .header
        margin-bottom 1.33rem

      .message
        margin-bottom 0.64rem
        margin-top 0.26rem
        &.hidden
          display none

      section.container
        padding 0

      label.label
        font-weight 600

  // loading animation
  span.loading
    color $loader-color
    display inline-block
    height 1.28em
    line-height 1.49em
    margin 0 0.68rem
    overflow hidden
    vertical-align text-bottom

    &::after
      animation spin 0.32s steps(4) infinite
      content '|\A/\Aâ€“\A\\\A'
      display inline-table
      font-family serif
      font-weight boild
      text-align center
      white-space pre

      @keyframes spin
        to
          transform translateY( -6.0em)

    &.hidden
      display none

// typography
body
  .wrapper
    font-family 'Open Sans', 'DejaVu Sans', Arial, Helvetica, sans-serif
    font-size 1.02em
    font-weight 300

    h1, h2, h3, h4, h5, h6
      font-family 'Open Sans', 'DejaVu Sans', Arial, Helvetica, sans-serif
      font-weight normal
